<!DOCTYPE html>
<br>
<br>
<br>
<div class="mx-4">
    <h1>登録</h1>
    <br>
    <div class="w-50 p-3">
        <%= render partial: 'layouts/flash' %>
    </div>
    <br>
    <%= form_for @book do |f| %>
        
        <div class="field">
            <%= f.label :表紙 %>
            <%= f.file_field :image %>
        </div>

        <div class="field">
            <%= f.label :タイトル %>
            <%= f.text_field :title %>
        </div>

        <div class="field">
        <%= f.label :著者 %>
        <%= f.text_field :author %>
        </div>

        <div class="field">
        <%= f.label :出版社 %>
        <%= f.text_field :publisher%>
        </div>

        <div class="field">
        <%= f.label :発行年 %>
        <%= f.text_field :year%>
        </div>

        <div class="field">
        <%= f.label :ISBN %>
        <%= f.text_field :isbn %>
        </div>

        <div class="field">
        <%= f.label :目次 %>
        <%= f.text_field :content %>
        </div>

        <br>
        <%= f.submit "登録",class:"btn btn-outline-primary" %>
    <% end %>

</div>