class OpenbdApiService
    require 'net/http'
    require 'uri'
    require 'json'
    
    BASE_URL = 'https://api.openbd.jp/v1/get?isbn='

    def execute(isbn)
        
        @request_url = BASE_URL + isbn
        uri = URI.parse(@request_url)
        json = Net::HTTP.get(uri)
        response = JSON.parse(json)
        puts response

    end
    
end